{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types",
      "../generated-types"
    ]
  },
  "include": [
    "src/**/*",
    "../schemas/**/*",
    "../generated-types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 